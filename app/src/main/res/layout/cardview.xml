<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardCornerRadius="20dp"
    android:elevation="90dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="@color/orange"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/rubikbold"
            android:text="Title here"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/jenisKerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/tahomabd"
            android:text="Jenis :"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/descjenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/jenisKerjaan"
            android:fontFamily="@font/tahomabd"
            android:text="-"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jenisKerjaan"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tahomabd"
            android:text="Lokasi :"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/lokasidesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descjenis"
            android:layout_marginLeft="5dp"
            android:textColor="@color/hitam"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/lokasi"
            android:fontFamily="@font/tahomabd"
            android:text="-" />

        <TextView
            android:id="@+id/gaji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lokasi"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tahomabd"
            android:text="Gaji :"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/gajidesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lokasidesc"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/gaji"
            android:fontFamily="@font/tahomabd"
            android:text="-"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/fasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gaji"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tahomabd"
            android:text="Fasilitas :"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/fasilitasdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gajidesc"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/fasilitas"
            android:fontFamily="@font/tahomabd"
            android:text="-"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fasilitas"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tahomabd"
            android:text="Waktu kerja :"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/waktudesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fasilitasdesc"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/waktu"
            android:fontFamily="@font/tahomabd"
            android:text="-"
            android:textColor="@color/hitam" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waktu"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="150dp"
            android:fontFamily="@font/tahomabd"
            android:text="Tap untuk apply pekerjaan"
            android:textAlignment="viewStart"
            android:textAllCaps="false"

            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>